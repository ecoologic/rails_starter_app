<h1><%= @user.email %></h1>

<%= form_with model: @user do |f| %>
  <p>
    <%= f.label :private_notes %>
    <br>
    <%= f.text_area :private_notes,
                    autofocus: true,
                    autocapitalize: true,
                    class: 'textarea--big' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
  <%= link_to "Edit Account", edit_user_registration_path if can?(:manage, @user) %>
</p>

<p>
  <%= link_to 'Back', users_path %>
</p>
