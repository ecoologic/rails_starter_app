<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th><%= avatar_for(user, :small) %></th>
        <td><%= mail_to user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: "Destroy #{user}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
